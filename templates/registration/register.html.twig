{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        {{ form_start(registrationForm, { 'attr': { 'class': 'row justify-content-center mt-5' }  }) }}
            <div class="col-12 col-md-6 col-lg-4 d-grid gap-3">
                {{ form_errors(registrationForm) }}
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h1 class="mb-3">Register</h1>
                <div class="form-floating mb-3">
                    {{ form_widget(registrationForm.email) }}
                    {{ form_label(registrationForm.email) }}
                </div>
                <div class="form-floating mb-3">
                    {{ form_widget(registrationForm.plainPassword.password) }}
                    {{ form_label(registrationForm.plainPassword.password) }}
                </div>
                <div class="form-floating mb-3">
                    {{ form_widget(registrationForm.plainPassword.confirm_password) }}
                    {{ form_label(registrationForm.plainPassword.confirm_password) }}
                </div>
                {{ form_widget(registrationForm.submit) }}
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
