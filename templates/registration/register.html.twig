{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container mx-auto">
        {{ form_start(registrationForm, { 'attr': { 'class': 'flex justify-center' }  }) }}
            <div>
                <h1 class="text-5xl font-bold mb-5">{{ 'register.title' | trans }}</h1>

                {{ form_errors(registrationForm) }}

                {% for flash_error in app.flashes('verify_email_error') %}
                    {{ include('components/alert/_danger.html.twig', {title: flash_error} ) }}
                {% endfor %}
                <div class="mb-3">
                    {{ form_row(registrationForm.email) }}
                </div>
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.plainPassword.password) }}
                </div>
                <div class="form-floating mb-3">
                    {{ form_row(registrationForm.plainPassword.confirm_password) }}
                </div>
                {{ include('components/button/_submit.html.twig', {label: 'register.submit'}) }}
                <div class="mt-3">
                    {{ 'register.have_account' | trans }}
                    {{ include('components/link/simple-link.html.twig', { text: 'register.go_to_login', url: 'login' }) }}
                </div>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
